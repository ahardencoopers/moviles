<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itesm.mx.proyecto_moviles.MedicosRegistrados">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:layout_width="250px"
            android:layout_height="250px"
            android:id="@+id/profile"
            android:layout_below="@+id/registrate"
            android:layout_centerHorizontal="true"
            android:src="@drawable/doctor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Medico 1"
            android:id="@+id/text_nombre_medico"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cardiologia"
            android:id="@+id/text_especialidad"
            android:layout_below="@+id/text_nombre_medico"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hospital Metropolitano"
            android:id="@+id/text_hospital"
            android:layout_below="@+id/text_especialidad"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="86555"
            android:id="@+id/text_codigo_postal"
            android:layout_below="@+id/text_hospital"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text_numero" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="66"
            android:id="@+id/text_numero"
            android:layout_below="@+id/text_hospital"
            android:layout_alignStart="@+id/profile"
            android:layout_alignEnd="@+id/text_telefono" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="8185632359"
            android:id="@+id/text_telefono"
            android:layout_below="@+id/text_codigo_postal"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="doctor@hospital.com"
            android:id="@+id/text_correo"
            android:layout_below="@+id/text_telefono"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actualizar"
            android:id="@+id/button_actualizar_medico"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textStyle="bold"/>

    </RelativeLayout>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>
</android.support.v4.widget.DrawerLayout>