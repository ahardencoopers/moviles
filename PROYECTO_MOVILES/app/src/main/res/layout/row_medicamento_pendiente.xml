<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    >


    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/image_medicamento"
        android:src="@drawable/logo"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_nombre_medicina"
            android:text="Medicina"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_medicamento" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_dosis"
            android:text="1 Pastilla"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/image_medicamento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_horario_dosis"
            android:text="8:00"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</LinearLayout>